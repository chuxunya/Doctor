<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".view.Sick.XiangQingActivity">
    <LinearLayout
        android:id="@+id/linear_show"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_gravity="center_horizontal"
            android:layout_width="320dp"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/xiang_back"
                android:layout_marginTop="40dp"
                android:src="@mipmap/back"
                android:layout_width="16dp"
                android:layout_height="16dp"/>
            <TextView
                android:id="@+id/xiang_title"
                android:textColor="@color/colorHei"
                android:textSize="16sp"
                android:layout_marginTop="40dp"
                android:layout_centerHorizontal="true"
                android:text="急寻:面神经炎的治疗方法"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_gravity="center_horizontal"
            android:layout_width="320dp"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/xiang_name"
                android:layout_marginTop="30dp"
                android:textSize="16sp"
                android:textColor="@color/colorLan"
                android:text="张三"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="20dp"
                android:textSize="12sp"
                android:textColor="@color/colorLan"
                android:text="[病症]"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/xiang_bing"
                android:textColor="@color/colorHei"
                android:layout_marginTop="10dp"
                android:text="面神经炎"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="20dp"
                android:textSize="12sp"
                android:textColor="@color/colorLan"
                android:text="[科室]"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/xiang_keshi"
                android:textColor="@color/colorHei"
                android:layout_marginTop="10dp"
                android:text="内科"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="20dp"
                android:textSize="12sp"
                android:textColor="@color/colorLan"
                android:text="[病症详情]"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/xiang_xq"
                android:textColor="@color/colorHui"
                android:layout_marginTop="10dp"
                android:text="哈哈哈哈哈 哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="20dp"
                android:textSize="12sp"
                android:textColor="@color/colorLan"
                android:text="[治疗经历]"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/xiang_yiyuan"
                    android:textColor="@color/colorHei"
                    android:layout_marginTop="10dp"
                    android:text="北京天坛医院"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/xiang_time"
                    android:layout_marginRight="35dp"
                    android:text="2018.12.10"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/colorHei"
                    android:layout_marginTop="10dp"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginRight="30dp"
                    android:text="-"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/colorHei"
                    android:layout_marginTop="10dp"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/xiang_end_time"
                    android:text="12.10"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/colorHei"
                    android:layout_marginTop="10dp"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            <TextView
                android:id="@+id/xiang_jl"
                android:textColor="@color/colorHui"
                android:layout_marginTop="10dp"
                android:text="哈哈哈哈哈 哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="20dp"
                android:textSize="12sp"
                android:textColor="@color/colorLan"
                android:text="[相关图片]"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/xiang_img"
                android:layout_marginTop="10dp"
                android:layout_width="320dp"
                android:layout_height="144dp"/>
            <LinearLayout
                android:id="@+id/linear_cancel_jd"
                android:visibility="gone"
                android:layout_marginTop="30dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:textColor="#4fcb9f"
                    android:textSize="16sp"
                    android:text="我的解答"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_my_jd"
                    android:background="@drawable/ettive"
                    android:paddingBottom="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="10dp"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="10dp"
                    android:text="hahahahadsajhkasdhk"
                    android:textSize="12sp"
                    android:lineHeight="20dp"
                    android:textColor="#666666"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
    <View
        android:id="@+id/line_view"
        android:alpha="0.4"
        android:layout_marginBottom="40dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorHui"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        android:visibility="visible"
        android:id="@+id/linear_jd"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="40dp">

        <TextView
            android:id="@+id/xiang_hb"
            android:gravity="center"
            android:text="30H币"
            android:textColor="#d92109"
            android:textSize="14sp"
            android:layout_width="256dp"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/xiang_jd"
            android:background="@color/colorLan"
            android:textColor="@color/colorBai"
            android:textSize="14sp"
            android:gravity="center"
            android:text="我来解答"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
<RelativeLayout
    android:id="@+id/relative_edit"
    android:visibility="gone"
    android:layout_alignParentBottom="true"
    android:background="@color/colorQianHui"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/linear_et"
        android:gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/et_text"
            android:lineHeight="16dp"
            android:paddingRight="10dp"
            android:paddingBottom="8dp"
            android:paddingLeft="10dp"
            android:paddingTop="8dp"
            android:textColor="#000000"
            android:textSize="12sp"
            android:layout_marginBottom="7dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/ettive"
            android:layout_width="270dp"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/img_enjoy"
            android:src="@mipmap/common_icon_expression_n"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:layout_width="20dp"
            android:layout_height="20dp"/>
        <ImageView
            android:id="@+id/img_send"
            android:src="@mipmap/common_icon_send_n"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:layout_width="20dp"
            android:layout_height="20dp"/>
    </LinearLayout>

</RelativeLayout>

</RelativeLayout>