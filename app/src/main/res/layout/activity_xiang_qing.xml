<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".view.Sick.XiangQingActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_gravity="center_horizontal"
            android:layout_width="320dp"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginTop="40dp"
                android:src="@mipmap/back"
                android:layout_width="16dp"
                android:layout_height="16dp"/>
            <TextView
                android:textColor="@color/colorHei"
                android:textSize="16sp"
                android:layout_marginTop="40dp"
                android:layout_centerHorizontal="true"
                android:text="急寻:面神经炎的治疗方法"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_gravity="center_horizontal"
            android:layout_width="320dp"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <TextView
                android:layout_marginTop="30dp"
                android:textSize="16sp"
                android:textColor="@color/colorLan"
                android:text="张三"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="20dp"
                android:textSize="12sp"
                android:textColor="@color/colorLan"
                android:text="[病症]"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textColor="@color/colorHei"
                android:layout_marginTop="10dp"
                android:text="面神经炎"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="20dp"
                android:textSize="12sp"
                android:textColor="@color/colorLan"
                android:text="[科室]"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textColor="@color/colorHei"
                android:layout_marginTop="10dp"
                android:text="内科"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="20dp"
                android:textSize="12sp"
                android:textColor="@color/colorLan"
                android:text="[病症详情]"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textColor="@color/colorHui"
                android:layout_marginTop="10dp"
                android:text="哈哈哈哈哈 哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="20dp"
                android:textSize="12sp"
                android:textColor="@color/colorLan"
                android:text="[治疗经历]"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/colorHei"
                    android:layout_marginTop="10dp"
                    android:text="北京天坛医院"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="2018.12.10-12.15"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/colorHei"
                    android:layout_marginTop="10dp"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            <TextView
                android:textColor="@color/colorHui"
                android:layout_marginTop="10dp"
                android:text="哈哈哈哈哈 哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="20dp"
                android:textSize="12sp"
                android:textColor="@color/colorLan"
                android:text="[治疗经历]"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_marginTop="10dp"
                android:layout_width="320dp"
                android:layout_height="144dp"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:alpha="0.4"
        android:layout_marginBottom="40dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorHui"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="40dp">
        <TextView
            android:gravity="center"
            android:text="30H币"
            android:textColor="#d92109"
            android:textSize="14sp"
            android:layout_width="256dp"
            android:layout_height="match_parent"/>
        <TextView
            android:background="@color/colorLan"
            android:textColor="@color/colorBai"
            android:textSize="14sp"
            android:gravity="center"
            android:text="我来解答"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>


</RelativeLayout>