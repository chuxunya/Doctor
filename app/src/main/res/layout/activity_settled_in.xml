<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".view.SettledInActivity">
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent">
       <LinearLayout
           android:layout_marginTop="74dp"
           android:layout_centerHorizontal="true"
           android:layout_width="300dp"
           android:orientation="vertical"
           android:layout_height="wrap_content">
           <TextView
               android:textColor="#3087ea"
               android:textSize="16sp"
               android:text="完善信息"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"/>
           <TextView
               android:layout_marginTop="30dp"
               android:textColor="#3087ea"
               android:textSize="16sp"
               android:text="审核通过即可成功入驻"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"/>
           <TextView
               android:layout_marginTop="48dp"
               android:text="您的邮箱账号"
               android:textSize="14sp"
               android:textColor="#666666"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"/>
           <LinearLayout
               android:background="@drawable/linear"
               android:layout_marginTop="10dp"
               android:orientation="horizontal"
               android:gravity="center_vertical"
               android:layout_width="match_parent"
               android:layout_height="40dp">
               <EditText
                   android:id="@+id/et_in_email"
                   android:padding="10dp"
                   android:hint="请输入邮箱"
                   android:layout_weight="2"
                   android:background="@null"
                   android:layout_width="0dp"
                   android:layout_height="40dp"/>

               <TextView
                   android:id="@+id/tv_in_code"
                   android:gravity="center"
                   android:textColor="#ffffff"
                   android:textSize="12sp"
                   android:background="@drawable/textview"
                   android:text="获取验证码"
                   android:layout_width="0dp"
                   android:layout_height="39dp"
                   android:layout_weight="1" />
           </LinearLayout>

           <TextView
               android:layout_marginTop="30dp"
               android:text="请输入验证码"
               android:textSize="14sp"
               android:textColor="#666666"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"/>
           <LinearLayout
               android:background="@drawable/linear"
               android:layout_marginTop="10dp"
               android:orientation="horizontal"
               android:layout_width="match_parent"
               android:layout_height="40dp">
               <EditText
                   android:id="@+id/et_in_code"
                   android:padding="10dp"
                   android:hint="请输入验证码"
                   android:layout_weight="2"
                   android:background="@null"
                   android:layout_width="0dp"
                   android:layout_height="40dp"/>

           </LinearLayout>
           <TextView
               android:layout_marginTop="30dp"
               android:text="请输入密码"
               android:textSize="14sp"
               android:textColor="#666666"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"/>
           <LinearLayout
               android:background="@drawable/linear"
               android:layout_marginTop="10dp"
               android:orientation="horizontal"
               android:gravity="center_vertical"
               android:layout_width="match_parent"
               android:layout_height="40dp">

               <EditText
                   android:password="true"
                   android:id="@+id/et_in_pwd"
                   android:layout_width="0dp"
                   android:layout_height="40dp"
                   android:layout_weight="2"
                   android:background="@null"
                   android:hint="请输入密码"
                   android:padding="10dp" />

               <RelativeLayout
                   android:layout_weight="1"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content">
                   <ImageView

                       android:layout_marginRight="10dp"
                       android:layout_alignParentRight="true"
                       android:id="@+id/img_bi"
                       android:src="@mipmap/login_pwd_bi"
                       android:layout_width="16dp"
                       android:layout_height="16dp"/>
                   <ImageView
                       android:layout_marginRight="10dp"
                       android:layout_alignParentRight="true"
                       android:id="@+id/img_kai"
                       android:visibility="gone"
                       android:src="@mipmap/login_pwd_kai"
                       android:layout_width="16dp"
                       android:layout_height="16dp"/>
               </RelativeLayout>
           </LinearLayout>
           <TextView
               android:layout_marginTop="30dp"
               android:text="请再次输入密码"
               android:textSize="14sp"
               android:textColor="#666666"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"/>
           <LinearLayout
               android:background="@drawable/linear"
               android:layout_marginTop="10dp"
               android:orientation="horizontal"
               android:gravity="center_vertical"
               android:layout_width="match_parent"
               android:layout_height="40dp">

               <EditText
                   android:password="true"
                   android:id="@+id/et_in_pwd_two"
                   android:layout_width="0dp"
                   android:layout_height="40dp"
                   android:layout_weight="2"
                   android:background="@null"
                   android:hint="请再次输入密码"
                   android:padding="10dp" />

               <RelativeLayout
                   android:layout_weight="1"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content">
                   <ImageView
                       android:id="@+id/img_bi_two"
                       android:layout_marginRight="10dp"
                       android:layout_alignParentRight="true"
                       android:src="@mipmap/login_pwd_bi"
                       android:layout_width="16dp"
                       android:layout_height="16dp"/>
                   <ImageView
                       android:id="@+id/img_kai_two"
                       android:layout_marginRight="10dp"
                       android:layout_alignParentRight="true"
                       android:visibility="gone"
                       android:src="@mipmap/login_pwd_kai"
                       android:layout_width="16dp"
                       android:layout_height="16dp"/>
               </RelativeLayout>
           </LinearLayout>
           <Button
               android:layout_marginTop="50dp"
               android:id="@+id/bt_next"
               android:text="下一步"
               android:textColor="#ffffff"
               android:textSize="16sp"
               android:background="@drawable/btlogin"
               android:layout_centerHorizontal="true"
               android:layout_width="300dp"
               android:layout_marginBottom="40dp"
               android:layout_height="36dp"/>
       </LinearLayout>

   </RelativeLayout>

</ScrollView>