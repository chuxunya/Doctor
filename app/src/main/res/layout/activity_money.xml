<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.Show.MoneyActivity">
    <RelativeLayout
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:layout_width="320dp"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/money_back"
            android:layout_centerVertical="true"
            android:src="@mipmap/back"
            android:layout_width="16dp"
            android:layout_height="16dp"/>
        <TextView
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textColor="@color/colorHei"
            android:textSize="16sp"
            android:text="我的钱包"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_card_bang"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:textSize="10sp"
            android:text="去绑定"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:visibility="gone"
            android:id="@+id/tv_card_look"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:textSize="10sp"
            android:text="查看绑定"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/card_bg"
        android:background="@mipmap/my_wallet_bg"
        android:layout_marginTop="84dp"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_width="320dp"
        android:layout_height="174dp">
        <TextView
            android:textSize="18sp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:textColor="#ffffff"
            android:text="我的H币"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView

            android:id="@+id/money_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="60dp"
            android:text="29870"
            android:textColor="@color/colorBai"
            android:textSize="48sp" />

        <TextView
            android:layout_marginBottom="40dp"
           android:layout_alignParentBottom="true"
            android:layout_marginLeft="20dp"
            android:textColor="@color/colorBai"
            android:textSize="10sp"
            android:text="(满20000可提现)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/bt_ti_money"
            android:layout_marginBottom="20dp"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/btforget"
            android:textSize="14sp"
            android:textColor="@color/colorLan"
            android:text="提现"
            android:layout_width="58dp"
            android:layout_height="29dp"/>

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_money"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/card_bg"
        android:layout_centerHorizontal="true"
        android:layout_width="320dp"
        android:layout_height="match_parent"/>
</RelativeLayout>