<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

   <LinearLayout
       android:layout_width="match_parent"
       android:orientation="vertical"
       android:layout_height="match_parent">
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="为您设置一张证件照吧"
           android:textSize="16sp"
           android:textColor="#3087ea"
           android:layout_marginTop="45dp"
           android:layout_marginLeft="30dp"/>

       <!-- <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyfdf"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_360"
            android:layout_marginTop="@dimen/dp_70"/>-->

      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
          <ImageView
              android:visibility="gone"
              android:id="@+id/self_img"
              android:layout_width="match_parent"
              android:layout_height="360dp"
              android:layout_marginLeft="30dp"
              android:layout_marginTop="70dp"
              android:layout_marginRight="30dp"
              android:background="@drawable/linearforget"
              android:gravity="center"
              android:orientation="vertical"/>
          <LinearLayout
              android:scaleType="fitXY"
              android:id="@+id/linear_xuan"
              android:layout_width="match_parent"
              android:layout_height="360dp"
              android:layout_marginLeft="30dp"
              android:layout_marginTop="70dp"
              android:layout_marginRight="30dp"
              android:background="@drawable/linearforget"
              android:gravity="center"
              android:orientation="vertical"

              >

              <ImageView
                  android:layout_marginTop="40dp"
                  android:id="@+id/shangchuan"
                  android:layout_width="64dp"
                  android:layout_height="64dp"
                  android:src="@mipmap/my_icon_camera_n" />

              <TextView
                  android:textSize="12sp"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="30dp"
                  android:text="自定义形象照" />

              <TextView
                  android:textSize="12sp"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="20dp"
                  android:text="让你的形象独一无二" />

              <ImageView
                  android:layout_width="match_parent"
                  android:layout_height="131dp"
                  android:layout_marginTop="50dp"
                  android:scaleType="fitXY"
                  android:src="@mipmap/according_to_the_image" />
          </LinearLayout>

      </RelativeLayout>
   </LinearLayout>
    <Button
        android:layout_centerHorizontal="true"
        android:id="@+id/butedk_two"
        android:layout_width="300dp"
        android:layout_height="36dp"
        android:background="@drawable/btlogin"
        android:layout_alignParentBottom="true"
        android:text="完成设置"
        android:textSize="14sp"
        android:textColor="#ffffff"
        android:layout_marginBottom="40dp"
        />
    <Button
        android:visibility="gone"
        android:id="@+id/self_pai"
        android:background="@drawable/btforget"
        android:textSize="14sp"
        android:textColor="#3087ea"
        android:text="拍一张"
        android:layout_marginBottom="102dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_width="340dp"
        android:layout_height="40dp"/>
    <Button
        android:visibility="gone"
        android:id="@+id/self_ce"
        android:background="@drawable/btforget"
        android:textSize="14sp"
        android:textColor="#3087ea"
        android:text="从相册选择"
        android:layout_marginBottom="60dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_width="340dp"
        android:layout_height="40dp"/>
    <Button

        android:visibility="gone"
        android:id="@+id/self_qu"
        android:layout_marginTop="10dp"
        android:background="@drawable/btforget"
        android:textSize="14sp"
        android:textColor="#3087ea"
        android:text="取消"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_width="340dp"
        android:layout_height="40dp"/>
    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/relative_alpha_self"
        android:alpha="0.4"
        android:background="#000"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </RelativeLayout>
</RelativeLayout>
