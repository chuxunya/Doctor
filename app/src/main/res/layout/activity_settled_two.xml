<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.SettledTwoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_height="match_parent">
        <TextView
            android:layout_marginTop="74dp"
            android:textColor="#3087ea"
            android:textSize="16sp"
            android:text="完善信息"
            android:layout_width="300dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="30dp"
            android:textColor="#3087ea"
            android:textSize="16sp"
            android:text="审核通过即可成功入驻"
            android:layout_width="300dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="10dp"
            android:textColor="#F00606"
            android:textSize="10sp"
            android:text="*填写正确信息有助于快速通过审核"
            android:layout_width="300dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="30dp"
            android:textColor="#666666"
            android:textSize="14sp"
            android:text="您的真实姓名"
            android:layout_width="300dp"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:background="@drawable/linear"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="300dp"
            android:layout_height="40dp">
            <EditText
                android:id="@+id/settled_name"
                android:padding="10dp"
                android:hint="请输入姓名"
                android:layout_weight="2"
                android:background="@null"
                android:layout_width="0dp"
                android:layout_height="40dp"/>

        </LinearLayout>

        <TextView
            android:layout_marginTop="30dp"
            android:textColor="#666666"
            android:textSize="14sp"
            android:text="您所在医院"
            android:layout_width="300dp"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:background="@drawable/linear"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="300dp"
            android:layout_height="40dp">
            <EditText
                android:id="@+id/et_yiyuan"
                android:padding="10dp"
                android:hint="请输入您所在的医院"
                android:layout_weight="2"
                android:background="@null"
                android:layout_width="0dp"
                android:layout_height="40dp"/>

        </LinearLayout>
        <TextView
            android:layout_marginTop="30dp"
            android:textColor="#666666"
            android:textSize="14sp"
            android:text="您所在科室"
            android:layout_width="300dp"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:background="@drawable/linear"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="300dp"
            android:layout_height="40dp">
            <EditText
                android:id="@+id/et_keshi"
                android:padding="10dp"
                android:layout_weight="9"
                android:background="@null"
                android:layout_width="0dp"
                android:layout_height="40dp"/>
            <ImageView
                android:id="@+id/img_keshi"
                android:src="@mipmap/settled"
                android:padding="10dp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <TextView
            android:layout_marginTop="30dp"
            android:textColor="#666666"
            android:textSize="14sp"
            android:text="您的职责"
            android:layout_width="300dp"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:background="@drawable/linear"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="300dp"
            android:layout_height="40dp">
            <EditText
                android:id="@+id/et_zhize"
                android:padding="10dp"
                android:layout_weight="9"
                android:background="@null"
                android:layout_width="0dp"
                android:layout_height="40dp"/>
            <ImageView
                android:id="@+id/img_zhize"
                android:src="@mipmap/settled"
                android:padding="10dp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <Button
            android:id="@+id/bt_two_next"
            android:layout_marginTop="50dp"
            android:text="下一步"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:background="@drawable/btlogin"
            android:layout_centerHorizontal="true"
            android:layout_width="300dp"
            android:layout_marginBottom="40dp"
            android:layout_height="36dp"/>

    </LinearLayout>

</ScrollView>