<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative_self"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.Show.MySelfActivity">
    <LinearLayout
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:layout_height="260dp">
            <ImageView
                android:layout_marginTop="42dp"
                android:id="@+id/my_photo"
                android:layout_width="match_parent"
                android:layout_height="260dp"/>

            <RelativeLayout
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="42dp">

                <ImageView
                    android:id="@+id/my_back"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@mipmap/back" />

                <ImageView
                    android:id="@+id/my_ling"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/common_nav_message_black_n" />

                <TextView
                    android:id="@+id/tv_look"
                    android:layout_marginBottom="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:text="查看资料 >>"
                    android:textColor="@color/colorLan"
                    android:textSize="12sp" />
            </RelativeLayout>

        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="28dp"
            android:layout_width="320dp"
            android:layout_height="144dp">
            <LinearLayout
                android:id="@+id/liner_history"
                android:background="@drawable/mylinear"
                android:layout_width="130dp"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_height="144dp">
                <ImageView
                    android:src="@mipmap/my_icon_historical_inquiry_n"

                    android:layout_width="48dp"
                    android:layout_height="48dp"/>
                <TextView
                    android:layout_marginTop="24dp"
                    android:text="历史问诊"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linear_money"
                android:background="@drawable/mylinear"
                android:layout_alignParentRight="true"
                android:layout_width="130dp"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_height="144dp">
                <ImageView
                    android:src="@mipmap/my_icon_wallet_n"

                    android:layout_width="48dp"
                    android:layout_height="48dp"/>
                <TextView
                    android:layout_marginTop="24dp"
                    android:text="我的钱包"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="24dp"
            android:layout_width="320dp"
            android:layout_height="144dp">
            <LinearLayout
                android:id="@+id/linear_caina"
                android:background="@drawable/mylinear"
                android:layout_width="130dp"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_height="144dp">
                <ImageView
                    android:src="@mipmap/my_icon_recommendations_adopted_n"

                    android:layout_width="48dp"
                    android:layout_height="48dp"/>
                <TextView
                    android:layout_marginTop="24dp"
                    android:text="被采纳建议"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linear_huifu"
                android:background="@drawable/mylinear"
                android:layout_alignParentRight="true"
                android:layout_width="130dp"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_height="144dp">
                <ImageView
                    android:src="@mipmap/my_icon_automatic_response_n"

                    android:layout_width="48dp"
                    android:layout_height="48dp"/>
                <TextView
                    android:layout_marginTop="24dp"
                    android:text="设置自动回复"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

       <RelativeLayout
           android:visibility="gone"
           android:id="@+id/relative_alpha"
            android:alpha="0.4"
           android:background="#000"
           android:layout_width="match_parent"
           android:layout_height="match_parent">

       </RelativeLayout>
    <Button
        android:visibility="gone"
        android:id="@+id/self_update"
        android:background="@drawable/btforget"
        android:textSize="14sp"
        android:textColor="#3087ea"
        android:text="更换形象照"
        android:layout_marginBottom="60dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_width="340dp"
        android:layout_height="40dp"/>
    <Button
        android:visibility="gone"
        android:id="@+id/self_cancel"
        android:layout_marginTop="10dp"
        android:background="@drawable/btforget"
        android:textSize="14sp"
        android:textColor="#3087ea"
        android:text="取消"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_width="340dp"
        android:layout_height="40dp"/>
</RelativeLayout>