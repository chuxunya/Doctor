<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/forget_bg"
    tools:context=".view.ForgetActivity">

    <ImageView
        android:id="@+id/img_back_forget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:src="@mipmap/back_bai" />
    <TextView
        android:textSize="16sp"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:text="忘记密码"
        android:textColor="@color/colorBai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_marginTop="180dp"
        android:background="@drawable/linearforget"
        android:layout_centerHorizontal="true"
        android:layout_width="260dp"
        android:orientation="vertical"
        android:layout_height="124dp"></LinearLayout>
    <LinearLayout
        android:layout_marginTop="175dp"
        android:background="@drawable/linearforget"
        android:layout_centerHorizontal="true"
        android:layout_width="270dp"
        android:orientation="vertical"
        android:layout_height="124dp"></LinearLayout>
    <LinearLayout
        android:layout_marginTop="170dp"
        android:background="@drawable/linearforget"
        android:layout_centerHorizontal="true"
        android:layout_width="280dp"
        android:orientation="vertical"
        android:layout_height="124dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:lines="1"
                android:id="@+id/et_forget_email"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                android:textColor="#000"
                android:background="@null"
                android:textSize="14sp"
                android:hint="请输入邮箱账号"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/bt_code_forget"
                android:gravity="center"
                android:textColor="@color/colorBai"
                android:textSize="10sp"
                android:background="@drawable/btlogin"
                android:text="获取验证码"
                android:layout_marginRight="30dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="30dp"
                android:layout_width="58dp"
                android:layout_height="20dp"/>
        </RelativeLayout>
        <View
            android:layout_gravity="center_horizontal"
            android:background="@color/colorQianHui"
            android:layout_marginTop="10dp"
            android:layout_width="220dp"
            android:layout_height="1dp"/>
        <EditText
            android:lines="1"
            android:id="@+id/et_forget_pwd"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="16dp"
            android:textColor="#000"
            android:background="@null"
            android:textSize="14sp"
            android:hint="请输入验证码"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <View
            android:layout_gravity="center_horizontal"
            android:background="@color/colorQianHui"
            android:layout_marginTop="10dp"
            android:layout_width="220dp"
            android:layout_height="1dp"/>
    </LinearLayout>
    <Button
        android:id="@+id/bt_next_forget"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/btforget"
        android:text="下一步"
        android:textColor="@color/colorLan"
        android:layout_width="300dp"
        android:layout_height="36dp"/>
</RelativeLayout>