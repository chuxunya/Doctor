<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent"

    tools:context=".view.Sick.SearchActivity">
<LinearLayout

    android:layout_width="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_centerHorizontal="true"
        android:layout_width="320dp"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/back_search"
            android:layout_marginTop="30dp"
            android:src="@mipmap/back"
            android:layout_width="16dp"
            android:layout_height="16dp"/>

        <EditText
            android:paddingLeft="20dp"
            android:textSize="12sp"
            android:lines="1"
            android:id="@+id/et_search"
            android:hint="请输入病症名称或 标题关键字"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:background="@drawable/btsearch"
            android:layout_width="240dp"
            android:layout_height="40dp"/>
        <TextView
            android:id="@+id/tv_search"
            android:textSize="16sp"
            android:layout_alignParentRight="true"
            android:textColor="@color/colorLan"
            android:layout_marginTop="25dp"
            android:text="搜索"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <View
        android:layout_marginTop="10dp"
        android:background="@color/colorQianHui"
        android:layout_width="match_parent"
        android:layout_height="6dp"/>
    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/smart_search"
        android:layout_width="320dp"
        android:layout_height="match_parent">
      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent">
          <androidx.recyclerview.widget.RecyclerView
              android:id="@+id/recycler_search"
              android:layout_width="match_parent"
              android:layout_height="match_parent"/>
          <LinearLayout
              android:id="@+id/linear_wu"
              android:layout_width="match_parent"
              android:gravity="center"
              android:visibility="gone"
              android:orientation="vertical"
              android:layout_height="match_parent">
              <ImageView
                  android:src="@mipmap/no_search_message"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"/>
              <TextView
                  android:textColor="@color/colorHui"
                  android:layout_marginTop="10dp"
                  android:text="暂无相关数据"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"/>
          </LinearLayout>
      </RelativeLayout>

    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

</LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>