<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
   android:gravity="center_horizontal"
    tools:context=".view.Sick.SickActivity">
    <RelativeLayout
        android:layout_width="320dp"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/sick_back"
            android:layout_marginTop="30dp"
            android:src="@mipmap/back"
            android:layout_width="16dp"
            android:layout_height="16dp"/>

        <ImageView
            android:id="@+id/sick_ling"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="28dp"
            android:src="@mipmap/common_nav_message_black_n" />
    </RelativeLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="320dp"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <com.google.android.material.tabs.TabLayout
            app:tabIndicatorHeight="0dp"
            app:tabSelectedTextColor="@color/colorLan"
            app:tabMode="scrollable"
            android:id="@+id/sick_tab"
            android:layout_weight="8"
            android:layout_width="0dp"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/sick_search"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/search"
            android:layout_width="24dp"
            android:layout_height="24dp"/>
    </LinearLayout>
    <View
        android:background="@color/colorQianHui"
        android:layout_width="match_parent"
        android:layout_height="6dp"/>
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/sick_vp"
        android:layout_width="320dp"
        android:layout_height="match_parent">
    </androidx.viewpager.widget.ViewPager>

</LinearLayout>